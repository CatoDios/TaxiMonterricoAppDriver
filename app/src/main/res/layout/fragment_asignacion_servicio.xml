<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_toolbar"
    android:id="@+id/acepta">

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiene un servicio asignado"
        android:maxLines="2"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/lblestado"
        android:layout_marginBottom="162dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:indeterminate="true"
            android:max="200"
            android:progress="50"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circle_progress"
            android:secondaryProgress="200"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:text="20"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="100sp"/>

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:inner_text="ACEPTAR SERVICIO"
            app:inner_text_color="@android:color/white"
            app:inner_text_size="16sp"
            app:inner_text_top_padding="18dp"
            app:inner_text_bottom_padding="20dp"
            app:inner_text_background="@drawable/button_round_border"
            app:button_image_height="50dp"
            app:button_image_width="70dp"
            app:button_background="@drawable/shape_button"
            app:button_image_enabled="@mipmap/ic_launcher"
            android:layout_marginBottom="20dp"
            />


    </RelativeLayout>







</RelativeLayout>
